{{!--
    Estos dos formularios son solo de prueba para verificar funcionamiento de cookies.
    El primero nos permite generar una nueva cookie que almacene el usuario y mail indicados;
    el segundo llama al endpoint que lista las cookies activas con este dominio.
--}}
<body class="bg-danger-subtle"> 
    <div class="float-end">
        <form action="/api/sessions/logout" method="get">
            <button type="submit" class="btn btn-danger">Salir</button>
        </form>
    </div>

    <form action="/api/cookies" method="post" style="margin-top: 24px;">
        <input type="text" name="user" class="form-control" placeholder="Usuario" style="width: 300px;"><br />
        <input type="email" name="email" class="form-control" placeholder="Email" style="width: 300px;"><br />
        <button type="submit" class="btn btn-success">Enviar</button>
    </form>
    
    <form action="/api/cookies/getcookies" style="margin-top: 24px;">
        <button type="submit" class="btn btn-primary">Ver cookie</button>
    </form>
    <div style="margin-top: 24px;">
        <a class="btn btn-dark" href="/" role="button">Volver Index<a/>
    <div/>
</body>